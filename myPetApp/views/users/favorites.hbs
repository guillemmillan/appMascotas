<h2>Favorite</h2>

{{#if userInSession}}
<h2>Your favorites places, {{ userInSession.username }}!</h2>
<p>This is your profile page my friend!</p><span><img src="{{userInSession.image}}" /> </span>
{{/if}}
{{#each places}}
<div class="col-md-4">
  <img class="card-img-top" src="{{this.image}}" alt="" />
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
  </div>
  {{#if userInSession.parques}}
  <form action="/favorites/{{placeId}}" method="POST">
    <!--<form action="/favorites" method="POST"></form> -->
    <button type="submit">
      Favorito
    </button>
  </form>
  {{else}}

  <p>Still no logged in user, sorry!</p>
  {{/if}}

  {{/each}}